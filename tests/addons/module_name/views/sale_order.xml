<odoo>
    <!-- Sale Order -->
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale_order.view.form</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">

            <form>
                <group>
                    <field name="name" string="String"/>
                    <field name="name2" string="String"/>
                </group>
            </form>

        </field>
    </record>

    <odoo npupdate="true">
        <record id="soma" model="domain.bool">
            <field name="name-soma"></field>
        </record>

    </odoo>

</odoo>
